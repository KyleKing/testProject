template(name='bikesList')
  .mechanic-info
    form.info
      input(type="text" name="BikeNumber")
      input(type="submit" value="Change Bike")
  table.data-set
    //- Labels Row
    tr
      td timestamp
      td status
      td mechanicNotes
      td partslist
      td mechanic
      td role
      td.pos lat
      td.pos lng
    //- Actual Bike Data
    each bikes
      tr
        td {{formatDate timestamp "shortest"}}
        td #{status}
        td #{mechanicNotes}
        td #{partslist}
        td #{mechanic}
        td #{role}
        td.pos #{lat}
        td.pos #{lng}